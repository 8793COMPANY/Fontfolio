<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/back_btn_guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

        </androidx.constraintlayout.widget.Guideline>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/login_back_btn"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.065"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/back_btn_guideline"></Button>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Login"
            android:textColor="#80000000"
            android:gravity="center"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"></TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/social_login_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        app:layout_constraintHeight_percent="0.31"
        app:layout_constraintVertical_bias="0">

        <TextView
            android:id="@+id/login_messge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Login with a different account"
            android:textColor="@color/black"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintVertical_bias="0.05"></TextView>




        <LinearLayout
            android:id="@+id/kakao_login_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/kakao_login_btn"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_messge"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintVertical_bias="0.1">

        </LinearLayout>



        <LinearLayout
            android:id="@+id/facebook_login_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/facebook_login_btn"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/kakao_login_area"
            app:layout_constraintStart_toStartOf="@+id/kakao_login_area"
            app:layout_constraintTop_toBottomOf="@+id/kakao_login_area"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintVertical_bias="0.1"></LinearLayout>



        <LinearLayout
            android:id="@+id/google_login_area"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/google_login_btn"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/facebook_login_area"
            app:layout_constraintStart_toStartOf="@+id/facebook_login_area"
            app:layout_constraintTop_toBottomOf="@+id/facebook_login_area"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_percent="0.19"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintVertical_bias="0.2"></LinearLayout>




        <TextView
            android:id="@+id/login_type_devide_section"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="or"
            android:gravity="center"
            android:textColor="@color/black"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/google_login_area"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.09"
            app:layout_constraintVertical_bias="1"></TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>






<!--    <LinearLayout-->
<!--        android:id="@+id/login_section"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
