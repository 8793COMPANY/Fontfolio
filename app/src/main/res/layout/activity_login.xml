    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_section"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/social_login_section"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.1">

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="13sp"
            android:text="@string/email"
            android:textColor="#333333"
            app:layout_constraintLeft_toLeftOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0"></TextView>


        <EditText
            android:id="@+id/email_input_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:textColor="#333333"
            android:textSize="19sp"
            android:hint="@string/please_email_input_box_hint"
            android:autoText="false"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/email"
            app:layout_constraintWidth_percent="0.72"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintVertical_bias="0"></EditText>




        <TextView
            android:id="@+id/pw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/pw"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@+id/email_input_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/email_input_box"
            app:layout_constraintWidth_percent="0.16"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintVertical_bias="0.2"></TextView>


        <EditText
            android:id="@+id/pw_input_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="19sp"
            android:background="@android:color/transparent"
            android:textColor="#333333"
            android:hint="@string/please_pw_input_box_hint"
            android:autoText="false"
            app:layout_constraintStart_toStartOf="@+id/pw"
            app:layout_constraintTop_toBottomOf="@+id/pw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.72"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintVertical_bias="0"></EditText>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/login_view_pw_off_btn"
            android:textColor="#333333"
            android:autoText="false"
            app:layout_constraintStart_toEndOf="@+id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/pw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.09"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintVertical_bias="0"></Button>



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.06"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

        </androidx.constraintlayout.widget.Guideline>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent="0.86"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">

        </androidx.constraintlayout.widget.Guideline>

    </androidx.constraintlayout.widget.ConstraintLayout>






    <LinearLayout
        android:id="@+id/login_btn_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_section"
        app:layout_constraintWidth_default="percent"
        android:background="@drawable/xml_rounding_btn_default"
        android:backgroundTint="#0D000000"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintVertical_bias="0.18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:text="Log in"
            android:textColor="#80000000"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>




    <TextView
        android:id="@+id/privacy_policy_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="11dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:text="@string/privacy_policy_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_area"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="0.042"
        app:layout_constraintVertical_bias="0.014"></TextView>



    <TextView
        android:id="@+id/forgot_pw_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Forgot your password?"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/privacy_policy_text"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="0.025"
        app:layout_constraintVertical_bias="0.1"></TextView>

    <LinearLayout
        android:id="@+id/empty11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pw_text"
        app:layout_constraintWidth_default="percent"
        android:elevation="5dp"
        app:layout_constraintVertical_weight="0.14"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>