<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white">


    <LinearLayout
        android:id="@+id/font_license_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounding_item_box_default"
        android:backgroundTint="#2d717e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/font_license"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="top"
            android:text="OFL"
            android:textColor="@color/white"></TextView>
        <TextView
            android:id="@+id/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/heart_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/font_info_heart_off"
        app:layout_constraintBottom_toBottomOf="@+id/font_license_background"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toRightOf="@+id/font_license_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/font_license_background"
        app:layout_constraintWidth_percent="0.05"></ImageView>


    <TextView
        android:id="@+id/heart_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="94,124"
        android:textColor="#80000000"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/font_license_background"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/heart_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/font_license_background"
        app:layout_constraintVertical_bias="0.5"></TextView>


    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/font_info_small_divider"
        app:layout_constraintBottom_toBottomOf="@+id/heart_total_text"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@+id/heart_total_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heart_total_text"
        app:layout_constraintWidth_percent="0.01"></ImageView>


    <TextView
        android:id="@+id/view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:textColor="#80000000"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/font_license_background"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toRightOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/font_license_background"
        app:layout_constraintVertical_bias="0.5"></TextView>

    <TextView
        android:id="@+id/view_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="274,124"
        android:textColor="#80000000"
        android:textSize="10dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/font_license_background"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toRightOf="@+id/view_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/font_license_background"
        app:layout_constraintVertical_bias="0.5"></TextView>




    <TextView
        android:id="@+id/fontName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="San Francisco PRO"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/font_license_background"
        app:layout_constraintVertical_bias="0.06"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/move_to_info_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fontName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.085"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginRight="13dp"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="San Francisco PRO/Apple Development"
        android:textColor="#80000000"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fontName"
        app:layout_constraintVertical_bias="0.07"></TextView>


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copyright"></View>


</androidx.constraintlayout.widget.ConstraintLayout>