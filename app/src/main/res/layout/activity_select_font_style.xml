<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/actionbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintVertical_bias="0">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/login_back_btn"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintWidth_percent="0.06"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"></androidx.appcompat.widget.AppCompatButton>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/welcome_fontfolio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/welcome_fontfolio"
        android:textSize="27sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.87"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.5"></TextView>

    <TextView
        android:id="@+id/select_font_style_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/select_style_content"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/welcome_fontfolio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.87"
        app:layout_constraintHeight_percent="0.035"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.5"></TextView>

    <LinearLayout
        android:id="@+id/next_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_font_style_content"
        app:layout_constraintWidth_default="percent"
        android:background="@drawable/xml_rounding_btn_default"
        android:backgroundTint="#0D000000"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintHorizontal_bias="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:text="Next"
            android:textColor="#80000000"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <GridView
        android:id="@+id/font_style_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="3"
        android:columnWidth="50dp"
        android:horizontalSpacing="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_btn"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.72"
        app:layout_constraintVertical_bias="1"></GridView>



</androidx.constraintlayout.widget.ConstraintLayout>